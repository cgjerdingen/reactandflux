{
	"plugins":[
		"react"
	],
	"parser": "babel-eslint",
	"parseOptions": {
		"ecmaVersion": 5,
		//"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"node": true,
		"jquery": true
	},
	"rules": {
		//"quotes": ["warn", "perfer single"],
		"no-trailing-spaces": "warn",
		"eol-last": "warn",
		"no-unused-vars": "warn",
		//"no-underscore-dangle": "warn",
		"no-lone-blocks": "warn",
		"no-undef": "warn",
		"semi": "warn",
		"react/jsx-uses-react": "warn",
		"react/jsx-uses-vars": "warn"
	},
	"globals": {
		"jQuery": true,
		"$": true
	}
}
